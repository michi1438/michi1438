#include "push_swap.h"

t_stack	*lstnew(int *value)
{
	t_stack	*ptr;

	ptr = (t_stack *)malloc(sizeof(t_stack));
	if (ptr == NULL)
		err();
	ptr->next = NULL;
	ptr->content = value;
	return (ptr);
}

void	lstadd_back(t_stacks **stacks, t_stack *new)
{
	t_stack	*last_a;
	t_stack	*node_a;
	t_stack	*last_b;
	t_stack	*node_b;
	t_stack	*new_b;

	node_b = &(*stacks)->stack_b;
	node_a = &(*stacks)->stack_a;
	if (node_a != NULL)
	{
		last_a = lstlast(node_a, new_a->content);
		new_a->prev = last_a;
		last_a->next = new_a;
	}
	else
		node_a = new_a;
}

t_stack	*lstlast(t_stack *stack_a, int *value)
{
	t_stack		*fwd;
	int			lastn;
	int			i;

	fwd = stack_a;
	i = 0;
	lastn = lstsize_n_check(fwd, value);
	while (i < (lastn - 1))
	{
		fwd = fwd->next;
		i++;
	}
	return (fwd);
}

int	lstsize_n_check(t_stack *lst, int *value)
{
	int			i;
	t_stack		*fwd;

	i = 0;
	fwd = lst;
	while (fwd != NULL)
	{
		//printf("stack's pointer :%p\n", fwd);
		if (fwd->content != NULL && *fwd->content == *value)
			err();
		fwd = fwd->next;
		i++;
	}
	return (i);
}

void	check_content(t_stacks *stacks)
{
	t_stack	*node;

	node = &stacks->stack_a;
	while (node->next != NULL)
	{
		node = node->next;
		printf("content :%d\n", *node->content);
	}
}

void	backward_check_content(t_stacks **stacks)
{
	t_stack	*bkw;
	int		value;

	value = -1;
	bkw = lstlast(&(*stacks)->stack_a, &value);
	while (bkw->prev != NULL)
	{
		printf("bkw content :%d\n", *bkw->content);
		bkw = bkw->prev;
	}
}
